<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<View prefWidth="500.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dialogs.subject_input.Subject_input_controller">
    <center>
        <VBox alignment="TOP_CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <children>
                <Text fx:id="title_label" fill="#051148" strokeType="OUTSIDE" strokeWidth="0.0" text="Ajouter Matiére">
                    <font>
                        <Font name="System Bold" size="36.0" />
                    </font>
                </Text>
                  <VBox spacing="40.0">
                      <children>
                          <VBox spacing="5.0">
                              <children>
                                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nom : ">
                                      <font>
                                          <Font size="18.0" />
                                      </font>
                                  </Text>
                                  <TextField fx:id="name_input" cache="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="350.0">
                                      <opaqueInsets>
                                          <Insets bottom="4.0" left="7.0" right="7.0" top="4.0" />
                                      </opaqueInsets>
                                  </TextField>
                              </children>
                          </VBox>
                          <VBox spacing="5.0">
                              <children>
                                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Déscription  : ">
                                      <font>
                                          <Font size="18.0" />
                                      </font>
                                  </Text>
                        <TextArea fx:id="description_input" maxWidth="350.0" prefHeight="80.0" prefWidth="350.0" wrapText="true" />
                              </children>
                          </VBox>
                  <VBox spacing="30.0">
                     <children>
                        <HBox fx:id="classe_esprit_wrapper" spacing="10.0" />
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#on_add_class_esprit_button_pressed" style="-fx-background-color: #fee39a; -fx-background-radius: 30;" text="Ajouter Classe" textFill="#051148">
                           <effect>
                              <DropShadow offsetY="3.0">
                                 <color>
                                    <Color opacity="0.25" />
                                 </color>
                              </DropShadow>
                           </effect>
                           <font>
                              <Font size="14.0" />
                           </font>
                           <padding>
                              <Insets bottom="6.0" left="20.0" right="20.0" top="6.0" />
                           </padding>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                  </VBox>
                  <HBox fx:id="actions_wrapper" nodeOrientation="RIGHT_TO_LEFT">
                     <children>
                        <Button fx:id="add_button" alignment="CENTER" mnemonicParsing="false" onAction="#on_add_button_pressed" style="-fx-background-color: #BBCEFE; -fx-background-radius: 30;" text="Ajouter" textFill="#051148">
                           <effect>
                              <DropShadow offsetY="3.0">
                                 <color>
                                    <Color opacity="0.25" />
                                 </color>
                              </DropShadow>
                           </effect>
                           <font>
                              <Font size="14.0" />
                           </font>
                           <padding>
                              <Insets bottom="6.0" left="20.0" right="20.0" top="6.0" />
                           </padding>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Button fx:id="modify_button" alignment="CENTER" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#on_modify_button_pressed" style="-fx-background-color: #fee39a; -fx-background-radius: 30;" text="Modifier" textFill="#051148">
                           <effect>
                              <DropShadow offsetY="3.0">
                                 <color>
                                    <Color opacity="0.25" />
                                 </color>
                              </DropShadow>
                           </effect>
                           <font>
                              <Font size="14.0" />
                           </font>
                           <padding>
                              <Insets bottom="6.0" left="20.0" right="20.0" top="6.0" />
                           </padding>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
                      </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
                  </VBox>
            </children>
        </VBox>
    </center>
</View>
