{% extends 'layouts/user.html.twig' %}
{% block main  %}
	<section class="section bg-home bg-light" id="services">
		<div class="container-fluid">
			<div class="row justify-content-center">
				<div class="col-lg-6">
					<div
						class="title text-center ">
						<!--	<h6 class="text-primary small-title">Mes testes</h6> -->
						<h2 class="text-primary ">Mes testes</h2>
						<p class="text-muted">Notre équipe vous souhaite beaucoup de succès :)</p>
					</div>
				</div>
			</div>
			{% for i in user_tests %}
				<div class="row">
					<div class="">
						<div class="services-box p-4 bg-white mt-4">
							<div class="services-img float-start me-4">
								<img src="images/icons/education.png" alt="">
							</div>
							<h5>
								Teste n°
								{{loop.index}}</h5>
							<div class="overflow-hidden">
								<div class="badge text-wrap" style="width: 6rem; background-color:#97A8F8;">
									Durée :
									{{i.duration}}
								</div>
								<div class="badge text-wrap" style="width: 6rem;background-color:#EFBBCF;">
									Seuil :
									{{i.minPoints}}
								</div>
								<br>
								<br>
								<p class="text-muted fs-5">{{i.getCourse().getDescription()}}</p>
								<br>
								<a href="{{ path('getTest',{id:i.id}) }}" class="text-custom"><input class="btn btn-primary fw-semibold" type="button" value="Passer le test"></a>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
			<!-- end row -->
		</div>
		<!-- end container-fluid -->
	</section>
	<!-- services end -->

{% endblock %}
