{% extends 'base.html.twig' %}

{% block body %}
  <div class="row">
    {% for subject in subjects %}
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">{{ subject.name }}</h5>
            <p class="card-text">{{ subject.description }}</p>
            <a href="{{ path('subject_show', { id: subject.id }) }}" class="btn btn-primary">View courses</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}
