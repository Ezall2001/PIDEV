            <tr>
                <th style="text-align: left;">Nom </th>
                <th >description </th>
                <th >classe</th>
                <th>  Actions</th>
            </tr>
           
        </thead>
                                            
                 <tbody id="bac-table">
				{% for subject in bla %}
					<tr>

						<td>
						
							{{subject.name}}
						</td>

						<td>
						
							{{subject.description}}
						</td>

						
                        <td>
						
							{{ subject.getClassesEsprit()}}
						</td>
 <td>
  <a href="{{ path('modifiersubject',{'id':subject.id}) }}" class="btn btn-success"><i class="fas fa-edit"></i></a>
  </td>
  <td>
  <a href="{{ path('deletesubject',{'id':subject.id}) }}" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
</td>
						</tr>
					{% endfor %}


         

				</tbody>
             

                                            </table>
                                            {% endif %}
                                        </div> <!-- end .table-responsive-->
                                    </div> <!-- end card-body -->
                                </div> <!-- end card -->
                            </div> <!-- end col -->
                        </div> <!-- end row -->
    
                    </div> <!-- container -->

                </div> <!-- content -->

                  
                    {% endblock %}