{% extends 'layouts//admin.html.twig' %}
{% block body %}
  
            <div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="table-responsive">
                    {% if subjects %}
    <table class="table table-left" id="btn-editable">
        <thead>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td style="text-align: right;">
                    <a href="{{ path('addsubject') }}" class="btn btn-primary"><i class="fas fa-plus"></i> Ajouter</a>
                </td>
            </tr>

            
                       <div class="col-sm-8 col-xl-6">
                        {{ form_start(form, {'attr': {'class': 'form-inline float-sm-right mt-3 mt-sm-0'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control mr-sm-2 mb-2', 'placeholder': 'Name'}}) }}
                        {{ form_widget(form.classes_esprit, {'attr': {'class': 'form-control mr-sm-2 mb-2', 'placeholder': 'classes_esprit'}}) }}
