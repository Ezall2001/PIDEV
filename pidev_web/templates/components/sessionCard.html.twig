<div class="col-sm-12 col-lg-6 d-flex justify-content-center ">

	<div class="card session-card p-0">
		<img class="card-img-top img-fluid" src="{{asset(session.imageLink)}}">
		<div class="card-body pb-2">

			<div class="card-title mb-2">
				<div>
					<h4 class="card-title h3">{{session.course.name}}</h4>
					<div class="creator">
						<h5 class="card-title text-muted h6">{{session.user.firstName}}
							{{session.user.lastName}}</h5>
					</div>
				</div>

				<span class="badge bg-success fw-bolder fs-6">
					{{session.price|number_format(3)}}
					DT</span>
			</div>


			<div class="card-content">
				<a href="{{path('session', {id:session.id})}}">
					<p class="fs-6 text-muted">
						{{session.date|date('Y - m - d')}}


						<span class="mx-1">
							|
						</span>

						{{session.startTime|date('H:i')}}
						-
						{{session.endTime|date('H:i')}}

					</p>
					<p class="card-text text-body">{{session.topics}}</p>

					<a class="details-link" href="{{path('session', {id:session.id})}}">Voir Details
						<i class="ps-1 fas fa-external-link-alt"></i>
					</a>
				</a>
			</div>


			<div class="card-actions mt-2 p-0">
				<small class="text-body-secondary">Nombre de participants :
					<br>
					{{session.places}}
					{% if session.maxPlaces is not null %}
						/
						{{session.maxPlaces}}
					{% endif %}
				</small>
				{% if actionType == 'creator' %}
					<div class="dropdown">
						<button class="btn btn-warning waves-effect waves-light fs-5 dropdown-toggle" data-bs-toggle="dropdown">
							<span class="btn-label">
								<i class="fas fa-edit fs-6"></i>
							</span>
							Gérer
						</button>
						<button class="mobile-btn btn btn-lg btn-warning waves-effect waves-light dropdown-toggle" data-bs-toggle="dropdown">
							<i class="fas fa-edit fs-4"></i>
						</button>
						<div class="dropdown-menu" data-popper-placement="bottom-start">
							<button class="dropdown-item modify-session-btn" data-bs-toggle="modal" data-bs-target="#session-form-modal" data-session-id="{{session.id}}" data-session-id="{{session.id}}">Modifier</button>
							<button class="dropdown-item delete-session-btn" data-bs-toggle="modal" data-bs-target="#confirm-delete-modal" data-session-id="{{session.id}}">Supprimer</button>
						</div>
					</div>

				{% elseif actionType == 'baught' %}
					<button data-session-id="{{session.id}}" class="btn btn-success waves-effect waves-light fs-5" disabled>
						<span class="btn-label">
							<i class="fas fa-shopping-cart fs-6"></i>
						</span>
						Achetée
					</button>

					<button data-session-id="{{session.id}}" class="mobile-btn btn btn-lg btn-success waves-effect waves-light" disabled>
						<i class="fas fa-shopping-cart fs-4"></i>
					</button>

				{% else %}
					<button data-session-id="{{session.id}}" class="participate-action btn btn-primary waves-effect waves-light fs-5">
						<span class="btn-label">
							<i class="fas fa-shopping-cart fs-6"></i>
						</span>
						Participer
					</button>

					<button data-session-id="{{session.id}}" class="mobile-btn participate-action btn btn-lg btn-primary waves-effect waves-light">
						<i class="fas fa-shopping-cart fs-4"></i>
					</button>

				{% endif %}

			</div>

		</div>
	</div>
</div>
