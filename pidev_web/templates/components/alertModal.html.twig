{% if isSuccess %}
	<button type="button" class="btn btn-success open-session-success-alert d-none" data-bs-toggle="modal" data-bs-target="#session-success-alert">Success Alert</button>
	<div id="session-success-alert" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
		<div class="modal-dialog modal-sm">
			<div class="modal-content modal-filled bg-success">
				<div class="modal-body">
					<div class="text-center">
						<i class="dripicons-checkmark h1 text-white"></i>
						<h4 class="mt-2 text-white">Succès</h4>
						<p class="mt-3 text-white">Opération effectuée avec succès</p>
						<button type="button" class="btn btn-light my-2" data-bs-dismiss="modal">Continuer</button>
					</div>
				</div>
			</div>
		</div>
	</div>

{% else %}
	<button type="button" class="btn btn-danger open-session-error-alert d-none" data-bs-toggle="modal" data-bs-target="#session-error-alert">Danger Alert</button>
	<div id="session-error-alert" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
		<div class="modal-dialog modal-sm">
			<div class="modal-content modal-filled bg-danger">
				<div class="modal-body">
					<div class="text-center">
						<i class="dripicons-wrong h1 text-white"></i>
						<h4 class="mt-2 text-white">Oops !</h4>
						<p class="mt-3 text-white">quelque chose s'est mal passé</p>
						<button type="button" class="btn btn-light my-2" data-bs-dismiss="modal">Continuer</button>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endif %}
