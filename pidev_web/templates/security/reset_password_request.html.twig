{% extends 'layouts/user.html.twig' %}

{% block title %}Réinitialisation de mot de passe{% endblock %}

{% block main %}

<body class="loading authentication-bg authentication-bg-pattern">

    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-4">

                    <div class="card">

                        <div class="card-body p-4">

                            <div class="text-center mb-4">
                                <h4 class="text-uppercase mt-0 mb-3">Réinitialisation de mot de passe</h4>
                                <p class="text-muted mb-0 font-13">{{ form_start(requestPassForm) }} </p>
                            </div>

                            <div class="mb-3">
                                {{ form_label(requestPassForm.email, 'Adresse Email') }}
                                {{ form_widget(requestPassForm.email, {'attr': {'class': 'form-control'}})
                                }}
                                <div style="color:brown; font-size: 14px">
                                    {{ form_errors(requestPassForm.email) }}
                                </div>
                            </div>
                            <div class="mb-3 text-center d-grid">
                                <button type="submit" class="btn btn-primary">Envoyer</button>
                                {{ form_end(requestPassForm) }}
                            </div>

                        </div> <!-- end card-body -->
                    </div>
                    <!-- end card -->

                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            <p class="text-muted">Back to <a href="{{ path('app_login') }}"
                                    class="text-dark ml-1"><b>Log
                                        in</b></a></p>
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->

</body>

{% endblock %}